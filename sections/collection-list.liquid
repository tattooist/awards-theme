{{ 'section-collection-list.css' | asset_url | stylesheet_tag }}
{{ 'component-card.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  :root {
    --color-collection-list-text: {{ section.settings.text_color.red  }}, {{ section.settings.text_color.green  }}, {{ section.settings.text_color.blue  }};
    --color-collection-list-bg: {{ section.settings.bg_color }};
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="collection-list-wrapper page-width isolate{% if section.settings.swipe_on_mobile == true %} page-width-desktop{% endif %}{% if section.settings.title == blank %} no-heading{% endif %}{% if section.settings.show_view_all == false or section.blocks.size > collections.size %} no-mobile-link{% endif %} section-{{ section.id }}-padding">
  {% unless section.settings.title == blank %}
    <div class="title-wrapper-with-link{% if section.settings.swipe_on_mobile == true %} title-wrapper--self-padded-tablet-down{% else %} title-wrapper--self-padded-mobile{% endif %}{% if section.settings.title == blank %} title-wrapper-with-link--no-heading{% endif %} title-wrapper--no-top-margin">
      <h2 class="collection-list-title h1">{{ section.settings.title | escape }}</h2>
    </div>
  {% endunless %}

  <slider-component class="slider-mobile-gutter">
    <ul class="collection-list contains-card{% if settings.card_style == 'standard' %} contains-card--standard{% endif %} grid grid--1-col{% if section.settings.columns_desktop == 1 %} grid--full-width{% else %} grid--{{ section.settings.columns_desktop }}-col-desktop{% endif %} grid--{{ section.blocks.size }}-col-tablet{% if section.settings.swipe_on_mobile %} slider slider--tablet grid--peek{% endif %} collection-list--{{ section.blocks.size }}-items"
      id="Slider-{{ section.id }}"
      role="list"
    >
      {%- liquid
        assign columns = section.blocks.size
        if columns > 3
          assign columns = 3
        endif
      -%}

      {%- if section.settings.sort_collections == 'title_asc' -%}
        {% assign sort_collections = section.blocks | sort: "title" %}
      {% elsif section.settings.sort_collections == 'title_desc' %}
        {% assign sort_collections = section.blocks | sort: "title" | reverse %}
      {% elsif section.settings.sort_collections == 'date_asc' %}
        {% assign sort_collections = section.blocks | sort: "published_at" | reverse %}
      {% elsif section.settings.sort_collections == 'date_desc' %}
        {% assign sort_collections = section.blocks | sort: "published_at"  %}
      {% elsif section.settings.sort_collections == 'product_count_asc' %}
        {% assign sort_collections = section.blocks | sort: "products_count" %}
      {% elsif section.settings.sort_collections == 'product_count_desc' %}
        {% assign sort_collections = section.blocks | sort: "products_count" | reverse %}
      {% elsif section.settings.sort_collections == 'manual' %}
        {% assign sort_collections = section.blocks %}
      {%- endif -%}

      {%- for block in sort_collections -%}
        <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="collection-list__item grid__item{% if section.settings.swipe_on_mobile %} slider__slide{% endif %}{% if block.settings.collection.featured_image == nil %} collection-list__item--no-media{% endif %}" {{ block.shopify_attributes }}>
          {% render 'card-collection', card_collection: block.settings.collection , media_aspect_ratio: section.settings.image_ratio, columns: columns %}
        </li>
      {%- endfor -%}
    </ul>

    {%- if section.settings.swipe_on_mobile -%}
      <div class="slider-buttons no-js-hidden{% if section.blocks.size < 5 %} medium-hide{% endif %}{% if section.blocks.size < 2 %} small-hide{% endif %}">
        <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-caret' %}</button>
        <div class="slider-counter caption">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ section.blocks.size }}</span>
        </div>
        <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-caret' %}</button>
      </div>
    {%- endif -%}
  </slider-component>

  {%- if section.settings.show_view_all and section.blocks.size < collections.size -%}
    <div class="center collection-list-view-all{% if section.settings.swipe_on_mobile %} small-hide medium-hide{% endif %}">
      <a href="{{ routes.collections_url }}" class="button">{{ 'sections.collection_list.view_all' | t }}</a>
    </div>
  {%- endif -%}
</div>

{% schema %}
{
  "name": "t:sections.collection-list.name",
  "tag": "section",
  "class": "section section-collection-list",
  "max_blocks": 16,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "default": "Shop by category",
      "label": "t:sections.collection-list.settings.title.label"
    },
    {
      "type": "select",
      "id": "text_aligment",
      "options": [
        {
          "value": "left",
          "label": "t:sections.collection-list.settings.text_aligment.options__1.label"
        },
        {
          "value": "center",
          "label": "t:sections.collection-list.settings.text_aligment.options__2.label"
        }
      ],
      "default": "left",
      "label": "t:sections.collection-list.settings.text_aligment.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "t:sections.collection-list.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "sort_collections",
      "options": [
        {
          "value": "title_asc",
          "label": "t:sections.collection-list.settings.sort_collections.options__1.label"
        },
        {
          "value": "title_desc",
          "label": "t:sections.collection-list.settings.sort_collections.options__2.label"
        },
        {
          "value": "date_asc",
          "label": "t:sections.collection-list.settings.sort_collections.options__3.label"
        },
        {
          "value": "date_desc",
          "label": "t:sections.collection-list.settings.sort_collections.options__4.label"
        },
        {
          "value": "product_count_asc",
          "label": "t:sections.collection-list.settings.sort_collections.options__5.label"
        },
        {
          "value": "product_count_desc",
          "label": "t:sections.collection-list.settings.sort_collections.options__6.label"
        },
        {
          "value": "manual",
          "label": "t:sections.collection-list.settings.sort_collections.options__7.label"
        }
      ],
      "default": "manual",
      "label": "t:sections.collection-list.settings.sort_collections.label"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        {
          "value": "square",
          "label": "t:sections.collection-list.settings.image_ratio.options__3.label"
        },
        {
          "value": "portrait",
          "label": "t:sections.collection-list.settings.image_ratio.options__2.label"
        },
        {
          "value": "adapt",
          "label": "t:sections.collection-list.settings.image_ratio.options__1.label"
        }
      ],
      "default": "square",
      "label": "t:sections.collection-list.settings.image_ratio.label",
      "info": "t:sections.collection-list.settings.image_ratio.info"

    },
    {
      "type": "checkbox",
      "id": "swipe_on_mobile",
      "default": false,
      "label": "t:sections.collection-list.settings.swipe_on_mobile.label"
    },
    {
      "type": "header",
      "content": "t:sections.collection-list.settings.color_title"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "t:sections.collection-list.settings.bg_color",
      "default": "#FFF"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "t:sections.collection-list.settings.text_color",
      "default": "#262626"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": false,
      "label": "t:sections.collection-list.settings.show_view_all.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 32
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "t:sections.collection-list.blocks.featured_collection.name",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.collection.label"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.collection-list.blocks.featured_collection.settings.image.label",
          "info": "t:sections.collection-list.blocks.featured_collection.settings.image.info"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.collection-list.presets.name",
      "blocks": [
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        },
        {
          "type": "featured_collection"
        }
      ]
    }
  ]
}
{% endschema %}